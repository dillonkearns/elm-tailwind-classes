{
  "name": "elm-tailwind-demo",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "extract": "elm-review --extract --report=json --config ../review 2>/dev/null | jq -r '.extracts.TailwindExtractor.classes[]' > tailwind-safelist.txt",
    "build:css": "npx tailwindcss -i ./input.css -o ./output.css",
    "build:manual": "npm run extract && npm run build:css && elm make Demo.elm --output=demo.js"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/vite": "^4.0.0",
    "elm-review": "^2.13.5",
    "elm-tailwind-vite": "file:../vite-plugin",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.0",
    "vite-plugin-elm": "^3.0.1"
  }
}
